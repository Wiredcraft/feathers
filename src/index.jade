    .wrap
      .navbar.navbar-default.navbar-fixed-top(role='navigation', bs-navbar)
        .container
          .navbar-header
            a.navbar-brand.text-muted(ui-sref='index') defsynth
            button.navbar-toggle(
              type='button'
              ng-click='collapse = !collapse'
            )
              span.icon-bar
              span.icon-bar
              span.icon-bar

          #top-nav-collapse.collapse.navbar-collapse(
            ng-class='{in: collapse}'
          )
            ul.nav.navbar-nav
              li(ui-sref-active='active')
                a(ui-sref='index') Home
              li(ui-sref-active='active')
                a(ui-sref='style-guide') Style Guide

      .container#content
        div(ui-view)

    footer#footer
      .container
        .text-center
          .btn-group
            a.btn.btn-link.btn-xs(ui-sref='terms') Terms &amp; Conditions

    span#spinner(
      us-spinner='{radius:30, width: 2, length: 16, color: "#dedede"}'
      spinner-key='main-loading'
